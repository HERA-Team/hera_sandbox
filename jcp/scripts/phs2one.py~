#! /usr/bin/env python

import aipy as a, sys, optparse, os

o = optparse.OptionParser()
a.scripting.add_standard_options(o, src=True, cal=True, ant=True)
opts,args = o.parse_args(sys.argv[1:])

uv = a.miriad.UV(args[0])
aa = a.cal.get_aa(opts.cal, uv['sdf'], uv['sfreq'], uv['nchan'])
srclist,cutoff,catalogs = a.scripting.parse_srcs(opts.src, opts.cat)
cat = a.cal.get_catalog(opts.cal, srclist, cutoff, catalogs)

nbls = a.scripting.parse_ants(opts.ant, uv['nants'])
if len(nbls) != 1: raise ValueError("select only one baseline!")
bl = nbls[0][0]
ants =  a.miriad.bl2ij(bl)
l,m = ants

def mfunc(uv, p, d):
    crd, t, (i, j) = p
    aa.set_jultime(t)
    cat.compute(aa)
    d = d * aa.gen_phs(cat[k], l, m)
    p = crd, t, (i, j)
    return p, d


for k in cat:
    for filename in args:
        print filename, '->', filename+'.phs%d%d' % (l,m) + k
        uvi = a.miriad.UV(filename)
        if os.path.exists(filename+'.phs%d%d' % (l,m)+k):
            print '    File exists... skipping.'
            continue
        uvo = a.miriad.UV(filename+'.phs%d%d' % (l,m)+k,status='new')
        uvo.init_from_uv(uvi)
        uvo.pipe(uvi,mfunc=mfunc,append2hist='Phased to antenna %d%d.\n' % (l,m))
