'''This is a calibration file for data collected at PAPER in South Africa with PoCo on JD 2455228.'''

import aipy as a, numpy as n,glob

def is_run1(jd): return (jd > 2455112.00 and jd < 2455120.00)
def is_run2(jd): return (jd > 2455229.00 and jd < 2455234.00)

class Antenna(a.fit.Antenna):
    def __init__(self, *args, **kwargs):
        self.runs = {1:{}, 2:{}, 3:{}, 4:{}, 5:{}, 6:{}}
        a.fit.Antenna.__init__(self, *args, **kwargs)
    def _update_phsoff(self):
        a.fit.Antenna._update_phsoff(self)
        for r in self.runs.keys():
            try:
                self.runs[r]['phsoff'] = n.polyval(self.runs[r]['_phsoff'],
                    self.beam.afreqs)
            except(KeyError): self.runs[r]['phsoff'] = self.phsoff
    def get_params(self, prm_list=['*']):
        aprms = {}
        for r in self.runs.keys():
            try: aprms['phsoff_run%d' % r] = self.runs[r]['_phsoff']
            except(KeyError): pass
        prms = a.fit.Antenna.get_params(self, prm_list=prm_list)
        for p in prm_list:
            if p.startswith('*'):
                prms.update(aprms)
                return prms
            try: prms[p] = aprms[p]
            except(KeyError): pass
        return prms
    def set_params(self, prms):
        for r in self.runs.keys():
            try: self.runs[r]['_phsoff'] = prms['phsoff_run%d' % r]
            except(KeyError): pass
        return a.fit.Antenna.set_params(self, prms)
    def set_run(self, r):
        self.phsoff = self.runs[r]['phsoff']

